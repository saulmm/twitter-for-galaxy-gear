<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_login_app_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon"
        android:scaleType="centerCrop"
        app:border_width="1dp"
        app:border_color="#FFF"
        />

    <TextView
        android:id="@+id/fragment_login_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@+id/fragment_login_app_icon"
        android:textColor="#FFF"
        android:textSize="50sp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center|top"
        android:fontFamily="sans-serif-thin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="for galaxy gear"
        android:layout_below="@+id/fragment_login_app_name"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center|top"
        android:fontFamily="sans-serif-thin"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >

        <info.hoang8f.widget.FButton

            android:id="@+id/tw_login_fragment_button"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_gravity="center|center_vertical"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:text="@string/flogin_button"

            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="true"
            fbutton:buttonColor="@color/tw_color_3"
            fbutton:shadowColor="#ff2d7eb5"
            fbutton:shadowHeight="4dp"
            />


        <TextView
            android:id="@+id/tw_login_error_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:text="Invalid twitter api keys"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffb9b9"
            />

    </LinearLayout>
</RelativeLayout>
